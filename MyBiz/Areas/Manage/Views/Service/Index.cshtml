@model List<Service>; 
@{
    ViewData["Title"] = "Index";
    int count = 0;
}
<a asp-action="create" class="btn bg-gradient-primary">Create</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Desc</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Service Srvc in Model)
         {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@Srvc.Name</td>
                    <td>@Srvc.Desc</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@Srvc.Id" class="btn bg-gradient-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@Srvc.Id" class="btn bg-gradient-primary">Delete</a>
                    </td>

                </tr>
         }
        
    </tbody>
</table>


